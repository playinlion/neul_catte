<header id="header_web">

    <div class="blank">
    </div>
    
    <section class="main_nav">
      <nav id="main_nav">
          <ul class="nav_ul">
              <% if user_signed_in? %>
                <div class="nav_container">
                  <%= link_to image_tag("logo.png", height: '46', width: '20'), root_path, class: "nav_logo" %>
                  <%= link_to '늘카테', main_about_path, class: "nav_item" %>
                  <%= link_to '테이프', tapes_path, class: "nav_item" %>
                  <%= link_to '데일리 뮤직', dailies_path, class: "nav_item" %>
                  

                  <div class="dropdown">
                    <button onclick="myFunction()" class="postbtn">
                      포스트
                    </button>

                    <div id="post-dropdown" class="post-menu">
                      <%= link_to '테이프', "/tapes/new", class: "post-menu-down" %>
                      <%= link_to '데일리 뮤직', "/dailies/new", class: "post-menu-down" %>
                    </div>
                  </div>

                  <%= link_to '마이 페이지', my_pages_path, class: "nav_item" %>
                  <%= link_to '로그아웃', destroy_user_session_path, class: "nav_item", method: 'delete' %>
                  
                </div>
                <a href="#" id="trigger">메뉴</a>
                <% else %>
                  <div class="nav_container">
                    <%= link_to image_tag("logo.png", height: '46', width: '20'), root_path, class: "nav_logo" %>
                    <%= link_to '늘어진 카세트 테이프', main_about_path, class: "nav_logotext" %>
                    <%= link_to '로그인', new_user_session_path, class: "nav_item" %>
                    
                  </div>
                <% end %>

          </ul>
          
      </nav>
    </section>
  </header>
  
  <script>
    $(function () {
      var trigger = $('#trigger');
      var menu = $('nav ul');
      $(trigger).on('click', function (e) {
        e.preventDefault();
        menu.slideToggle();
      });
      $(window).resize(function () {
        var w = $(window).width();
        if (w > 320 && menu.is(':hidden')) {
          menu.removeAttr('style');
        }
      });
    });
    
  </script>


<script>
/* When the user clicks on the button,
toggle between hiding and showing the dropdown content */
function myFunction() {
document.getElementById("post-dropdown").classList.toggle("show");
}

// Close the dropdown if the user clicks outside of it
window.onclick = function(event) {
if (!event.target.matches('.postbtn')) {

var dropdowns = document.getElementsByClassName("post-menu");
var i;
for (i = 0; i < dropdowns.length; i++) {
  var openDropdown = dropdowns[i];
  if (openDropdown.classList.contains('show')) {
    openDropdown.classList.remove('show');
  }
}
}
}

function menuDisplay_mob(){
    var nav = document.getElementById("main_nav_mobile");
    if(nav.style.display=='none'){
      nav.style.display = 'block';
    }else{
      nav.style.display = 'none';
    }
}
function postDisplay_menu(){
    var post = document.getElementById("dropdown_mob");
    var changeheight = document.getElementById("main_nav_mobile");
    if(post.style.display=='none'){
      post.style.display = 'flex';
      changeheight.style.height='60vw';
    }else{
      post.style.display = 'none';
      changeheight.style.height='42vw';
    }
}



</script>
